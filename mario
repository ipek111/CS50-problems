#include <cs50.h>
#include <stdio.h>


int main(void)
{
   int n ,c, k;


do
{
     n = get_int("Height: ");

   }

 while( n > 8  || n < 1);


  for (k = 0; k <= n; k++)
  {

    for (c =0; c <= n-k; c++)
    //when n=5 while loop at its 1st iteration 5-1 = 4 spaces
      printf(" ");

   //print # for c times.
    for (c = 0; c <= k-1; c++)
      printf("#");

   printf("\n");

}
}























